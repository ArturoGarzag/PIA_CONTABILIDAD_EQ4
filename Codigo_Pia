        print("{:<30} {:<20} {:<20} {:<13} ".format(" "*10,"1er. Semestre","2.do Semestre","Total 2021"))
        depre_entre_2 = depreciacion_gf /2
        suma_depre = depre_entre_2 + depre_entre_2
        print("{:<30} {:<20} {:<20} {:<13} ".format("Depreciacion",depre_entre_2,depre_entre_2,suma_depre))
        seguro_entre_2 = seguros_gf/2
        suma_seguro = seguro_entre_2 + seguro_entre_2
        print("{:<30} {:<20} {:<20} {:<13} ".format("Seguro",seguro_entre_2,seguro_entre_2,suma_seguro))
        suma_mantenimiento = mantenimiento_gf_ss + mantenimiento_gf_ps
        print("{:<30} {:<20} {:<20} {:<13} ".format("Mantenimiento",mantenimiento_gf_ps,mantenimiento_gf_ss,suma_mantenimiento))
        suma_energetico = energeticos_gf_ps + energeticos_gf_ss
        print("{:<30} {:<20} {:<20} {:<13} ".format("Energeticos",energeticos_gf_ps,energeticos_gf_ss,suma_energetico))
        varios_entre_2 = varios_gf / 2
        suma_varios = varios_entre_2 + varios_entre_2
        print("{:<30} {:<20} {:<20} {:<13} ".format("Varios",varios_entre_2,varios_entre_2,suma_varios))
        suma_gif_1er = depre_entre_2 + seguro_entre_2 + mantenimiento_gf_ps + varios_entre_2 + energeticos_gf_ps
        suma_gif_2do = depre_entre_2 + seguro_entre_2 + mantenimiento_gf_ss + varios_entre_2 + energeticos_gf_ss
        suma_gif = suma_depre + suma_seguro + suma_mantenimiento + suma_energetico + suma_varios
        print("{:<30} {:<20} {:<20} {:<13} ".format("Total G.I.F por semestre",suma_gif_1er,suma_gif_2do,suma_gif))
        print("Coeficiente para determinar el costo por hora de gastos indirectos de fabricacion")
        print("{:<30} {:<20} {:<20} {:<13} ".format("Total de G.I.F"," "*10," "*10,suma_gif))
        print("{:<30} {:<20} {:<20} {:<13} ".format("(/)Total horas M.O.D anual"," "*10," "*10,total_horas))
        div_hora_gif = suma_gif / total_horas
        print("{:<30} {:<20} {:<20} {:<13} ".format("Total de G.I.F"," "*10," "*10,div_hora_gif))
        print(" ")
        print(Separador)
        print("")
        print(" "*15 + "Presupuesto de gastos de operacion" + " "*15)
