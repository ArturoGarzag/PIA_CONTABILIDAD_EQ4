        div_depreciacion_ga = depreciacion_ga/2
        suma_depreciacion_ga = div_depreciacion_ga + div_depreciacion_ga
        print("{:<30} {:<20} {:<20} {:<13} ".format("Depreciacion",div_depreciacion_ga,div_depreciacion_ga,suma_depreciacion_ga))
        div_sueldo_salarios_ga = sueldo_salario_ga / 2
        suma_sueldo_salarios_ga = div_sueldo_salarios_ga + div_sueldo_salarios_ga
        print("{:<30} {:<20} {:<20} {:<13} ".format("Sueldo y Salarios",div_sueldo_salarios_ga,div_sueldo_salarios_ga,suma_sueldo_salarios_ga))
        mul_comision_ga_1er = Suma_importe_1er * 0.01
        mul_comision_ga_2do = Suma_importe_2do * 0.01
        suma_comision_ga = mul_comision_ga_1er + mul_comision_ga_2do
        print("{:<30} {:<20} {:<20} {:<13} ".format("Comisiones",mul_comision_ga_1er,mul_comision_ga_2do,suma_comision_ga))
        suma_varios_ga = varios_ss + varios_ps
        print("{:<30} {:<20} {:<20} {:<13} ".format("Varios",varios_ps,varios_ss,suma_varios_ga))
        div_intereses_prestamo_ga = intereses_prestamo_ga /2
        suma_intereses_prestamo_ga = div_intereses_prestamo_ga + div_intereses_prestamo_ga
        print("{:<30} {:<20} {:<20} {:<13} ".format("Intereses del prestamo",div_intereses_prestamo_ga,div_intereses_prestamo_ga,suma_intereses_prestamo_ga))
        suma_gastos_1er = div_depreciacion_ga + varios_ps + mul_comision_ga_1er + div_sueldo_salarios_ga + div_intereses_prestamo_ga
        suma_gastos_2do = div_depreciacion_ga + varios_ss + mul_comision_ga_2do + div_sueldo_salarios_ga + div_intereses_prestamo_ga 
        suma_gastos_total = suma_intereses_prestamo_ga + suma_comision_ga + suma_sueldo_salarios_ga +suma_depreciacion_ga +suma_varios_ga
        print("{:<30} {:<20} {:<20} {:<13} ".format("Total de gastos de operacion",suma_gastos_1er,suma_gastos_2do,suma_gastos_total))
        print("")
        print(Separador)
        print("")
        print(" "*15 + "Determinacion del costo unitario de productos terminados" + " "*15)
        print("Producto RM")
        print("{:<50} {:<20} {:<20} {:<13} ".format("Descripcion","Costo","Cantidad","Costo unitario"))
        mul_costoUnitario_ma_rm = css_ma * rm_ma
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia A",css_ma,rm_ma,mul_costoUnitario_ma_rm))
        mul_costoUnitario_mb_rm = css_mb * rm_mb
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia B",css_mb,rm_mb,mul_costoUnitario_mb_rm))
        mul_costoUnitario_mc_rm = css_mc * rm_mc
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia C",css_mc,rm_mc,mul_costoUnitario_mc_rm))
        mul_costoUnitario_mho_rm = 18 * mho_rm
        print("{:<50} {:<20} {:<20} {:<13} ".format("Mano de obra",18,mho_rm,mul_costoUnitario_mho_rm))
        mul_costoUnitario_GIF_rm = div_hora_gif * mho_rm
        print("{:<50} {:<20} {:<20} {:<13} ".format("Gastos indirectos de fabricacion",div_hora_gif,mho_rm,mul_costoUnitario_GIF_rm))
        Suma_costoUnitario_rm = mul_costoUnitario_ma_rm + mul_costoUnitario_mb_rm + mul_costoUnitario_mc_rm + mul_costoUnitario_mho_rm + mul_costoUnitario_GIF_rm
        print("{:<50} {:<20} {:<20} {:<13} ".format("Costo unitario"," "*10," "*10,Suma_costoUnitario_rm))
        print("Producto RD")        
        print("{:<50} {:<20} {:<20} {:<13} ".format("Descripcion","Costo","Cantidad","Costo unitario"))
        mul_costoUnitario_ma_rd = css_ma * rd_ma
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia A",css_ma,rd_ma,mul_costoUnitario_ma_rd))
        mul_costoUnitario_mb_rd = css_mb * rd_mb
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia B",css_mb,rm_mb,mul_costoUnitario_mb_rd))
        mul_costoUnitario_mc_rd = css_mc * rd_mc
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia C",css_mc,rm_mc,mul_costoUnitario_mc_rd))
        mul_costoUnitario_mho_rd = 18 * mho_rd
        print("{:<50} {:<20} {:<20} {:<13} ".format("Mano de obra",18,mho_rd,mul_costoUnitario_mho_rd))
        mul_costoUnitario_GIF_rd = div_hora_gif * mho_rd
        print("{:<50} {:<20} {:<20} {:<13} ".format("Gastos indirectos de fabricacion",div_hora_gif,mho_rm,mul_costoUnitario_GIF_rd))
        Suma_costoUnitario_rd = mul_costoUnitario_ma_rd + mul_costoUnitario_mb_rd + mul_costoUnitario_mc_rd + mul_costoUnitario_mho_rd + mul_costoUnitario_GIF_rd
        print("{:<50} {:<20} {:<20} {:<13} ".format("Costo unitario"," "*10," "*10,Suma_costoUnitario_rd))
        print("Producto RI")
        print("{:<50} {:<20} {:<20} {:<13} ".format("Descripcion","Costo","Cantidad","Costo unitario"))
        mul_costoUnitario_ma_ri = css_ma * ri_ma
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia A",css_ma,ri_ma,mul_costoUnitario_ma_ri))
        mul_costoUnitario_mb_ri = css_mb * ri_mb
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia B",css_mb,ri_mb,mul_costoUnitario_mb_ri))
        mul_costoUnitario_mc_ri = css_mc * ri_mc
        print("{:<50} {:<20} {:<20} {:<13} ".format("Materia C",css_mc,ri_mc,mul_costoUnitario_mc_ri))
        mul_costoUnitario_mho_ri = 18 * mho_ri
        print("{:<50} {:<20} {:<20} {:<13} ".format("Mano de obra",18,mho_ri,mul_costoUnitario_mho_ri))
        mul_costoUnitario_GIF_ri = div_hora_gif * mho_ri
        print("{:<50} {:<20} {:<20} {:<13} ".format("Gastos indirectos de fabricacion",div_hora_gif,mho_rm,mul_costoUnitario_GIF_ri))
        Suma_costoUnitario_ri = mul_costoUnitario_ma_ri + mul_costoUnitario_mb_ri + mul_costoUnitario_mc_ri + mul_costoUnitario_mho_ri + mul_costoUnitario_GIF_ri
        print("{:<50} {:<20} {:<20} {:<13} ".format("Costo unitario"," "*10," "*10,Suma_costoUnitario_ri))
        print("")
        print(Separador)
        print("")
        print(" "*15 + "Valuacion de inventarios finales" + " "*15)
        print(" "*15 + "Inventario final de materiales" + " "*15)
        print("{:<30} {:<20} {:<20} {:<13} ".format("Descripcion"," Unidades","Costo unitario","Costo total"))
        mul_costoUnitario_ma = ifs_ma *css_ma
        print("{:<30} {:<20} {:<20} {:<13} ".format("Material A",ifs_ma,css_ma,mul_costoUnitario_ma))
        mul_costoUnitario_mb = ifs_mb * css_mb
        print("{:<30} {:<20} {:<20} {:<13} ".format("Material B",ifs_mb,css_mb,mul_costoUnitario_mb))
        mul_costoUnitario_mc = ifs_mc * css_mc
        print("{:<30} {:<20} {:<20} {:<13} ".format("Material C",ifs_mc,css_mc,mul_costoUnitario_mc))
        suma_inventario_final_materiales = mul_costoUnitario_ma + mul_costoUnitario_mb + mul_costoUnitario_mc
        print("{:<30} {:<20} {:<20} {:<13} ".format("Inventario final de materiales"," "*10," "*10,suma_inventario_final_materiales))
        print(" "*15 + "Inventario final de productos terminados" + " "*15)
        print("{:<50} {:<20} {:<20} {:<13} ".format("Descripcion"," Unidades","Costo unitario","Costo total"))
        mul_costoUnitario_rm= ifs_rm * Suma_costoUnitario_rm
        print("{:<50} {:<20} {:<20} {:<13} ".format("Producto RM",ifs_rm,Suma_costoUnitario_rm,mul_costoUnitario_rm))
        mul_costoUnitario_rd= ifs_rd * Suma_costoUnitario_rd
        print("{:<50} {:<20} {:<20} {:<13} ".format("Producto RD",ifs_rm,Suma_costoUnitario_rd,mul_costoUnitario_rd))
        mul_costoUnitario_ri= ifs_ri * Suma_costoUnitario_ri
        print("{:<50} {:<20} {:<20} {:<13} ".format("Producto RI",ifs_ri,Suma_costoUnitario_ri,mul_costoUnitario_ri))
        suma_inventario_final_materiales_terminados = mul_costoUnitario_rm + mul_costoUnitario_rd + mul_costoUnitario_ri
        print("{:<50} {:<20} {:<20} {:<13} ".format("Inventario Final de producto terminado"," "*10," "*10,suma_inventario_final_materiales_terminados))
        print("")
        print(Separador)
        print("")
        print(" "*15 + "Relojes mexicanos S.A de C.V" + " "*15)
        print(" "*15 + "Estado de costo de produccion y ventas" + " "*15)      
        print(" "*6 + "Presupuesto del 1 de enero al 31 de diciembre del 2021" + " "*6)
        print("")
        print("{:<50} {:<20}  ".format("Saldo inicial de materiales",inventarios_materiales,))
        print("{:<50} {:<20}  ".format("(+) Compras de materiales",compra_to))
        Suma_material_disponible = inventarios_materiales + compra_to
        print("{:<50} {:<20}  ".format("(=)Materiales disponible",Suma_material_disponible))
        print("{:<50} {:<20}  ".format("(-)Inventario final de materiales",suma_inventario_final_materiales))
        resta_materiales_utilizados = Suma_material_disponible - suma_inventario_final_materiales
        print("{:<50} {:<20}  ".format("(=) Materiales utilizados",resta_materiales_utilizados))
        print("{:<50} {:<20}  ".format("(+) Mano de obra directa",suma_MOD_total))
        print("{:<50} {:<20}  ".format("(+) Gastos de fabricacion indirectos",suma_gif))
        suma_costo_produccion = resta_materiales_utilizados + suma_MOD_total + suma_gif
        print("{:<50} {:<20}  ".format("(=) Costo de produccion",suma_costo_produccion))
        print("{:<50} {:<20}  ".format("(+) Inventario inicial de productos terminados",inventario_productos))
        suma_produccion_disponible = suma_costo_produccion + inventario_productos
        print("{:<50} {:<20}  ".format("(=) Total de produccion disponible",suma_produccion_disponible))
        print("{:<50} {:<20}  ".format("(-) Inventario final de productos terminados",suma_inventario_final_materiales_terminados))
        resta_costo_ventas = suma_produccion_disponible - suma_inventario_final_materiales_terminados
        print("{:<50} {:<20}  ".format("(=) Costo de ventas",resta_costo_ventas))
        print(" ")
        print(Separador)
        print(" ")
        print(" "*15 + "Relojeria Mexicanos S.A de C.V" + " "*15)
        print(" "*15 + "Estado de resultados" + " "*15)
        print(" "*6 + "Presupuesto del 1 de enero al 31 de diciembre del 2021" + " "*6)
        print("{:<30} {:<20}".format("Ventas", Total_ventas))
        print("{:<30} {:<20}".format("(-)Costo de ventas",resta_costo_ventas )) 
        Utilidad_b = Total_ventas - resta_costo_ventas
        print("{:<30} {:<20}".format("(=)Utilidad bruta",Utilidad_b ))
        print("{:<30} {:<20}".format("(-)Gastos de operacion",suma_gastos_total )) 
        Utilidad_o = Utilidad_b - suma_gastos_total
        print("{:<30} {:<20}".format("(=)Utilidad de Operacion",Utilidad_o ))
        isr_30 = Utilidad_o * 0.3
        print("{:<30} {:<20}".format("(-)ISR",isr_30 ))
        ptu_10 = Utilidad_o * 0.1
        print("{:<30} {:<20}".format("(-)PTU",ptu_10))
        Utilidad_n = Utilidad_o - isr_30 - ptu_10
        print("{:<30} {:<20}".format("Ventas",Utilidad_n))
        print(" ")
        print(Separador)
        print(" ")
        print(" "*15 + "Relojeria Mexicanos S.A de C.V" + " "*15)
        print(" "*15 + "Estado de flujo de efectivo" + " "*15)
        print(" "*6 + "Presupuesto del 1 de enero al 31 de diciembre del 2021" + " "*6)
        print("{:<40} {:<20} {:<20}".format("Saldo inicial de efectivo", " "*10, efectivo))
        print("Entradas: ")
        print("{:<40} {:<20}{:<20}".format("Cobranza 2021", Cobranza_2021," "*10))
        print("{:<40} {:<20}{:<20}".format("Cobranza 2020", cliente, " "*10))
        total_entrada = Cobranza_2021 + cliente
        print("{:<40} {:<20}{:<20}".format("Total de entradas"," "*10,total_entrada))
        Efectivo_disponible = total_entrada + efectivo
        print("{:<40} {:<20}{:<20}".format("Efectivo disponible"," "*10,Efectivo_disponible))
        print("Salidas: ")
        print("{:<40} {:<20}{:<20}".format("Proveedores 2021", porcentaje_proveedor," "*10))
        print("{:<40} {:<20}{:<20}".format("Proveedores 2020", proveedor, " "*10))
        print("{:<40} {:<20}{:<20}".format("Pago mano de obra directa", suma_MOD_total," "*10))
        Pago_gasto_ind =  suma_gif - suma_depre 
        print("{:<40} {:<20}{:<20}".format("Pago gastos indirectos de fabricacion", Pago_gasto_ind," "*10))
        Pago_gastoOpe = suma_gastos_total - suma_depreciacion_ga
        print("{:<40} {:<20}{:<20}".format("Pago de gastos de operacion", Pago_gastoOpe," "*10))
        print("{:<40} {:<20}{:<20}".format("Compra de activo fijo (Maquinaria)", 85000," "*10))
        print("{:<40} {:<20}{:<20}".format("Pago ISR 2020", isr_pagar," "*10))
        print("{:<40} {:<20}{:<20}".format("Pago ISR 2021", 0," "*10))
        total_salidas = isr_pagar + 85000 + Pago_gastoOpe + Pago_gasto_ind + suma_MOD_total + proveedor + porcentaje_proveedor
        print("{:<40} {:<20}{:<20}".format("Total de salidas", " "*10, total_salidas))
        flujo_efectivo = Efectivo_disponible - total_salidas
        print("{:<40} {:<20}{:<20}".format("Flujo de efectivo actual"," "*10 ,flujo_efectivo,))
        print(" ")
        print(Separador)
        print(" ")
        print(" "*15 + "Relojeria Mexicanos S.A de C.V" + " "*15)
        print(" "*15 + "Balance general" + " "*15)
        print(" "*6 + "Presupuesto del 1 de enero al 31 de diciembre del 2021" + " "*6)
        print("Activo")
        print("Circulante")
        print("{:<50} {:<20}{:<20}".format("Efectivo",flujo_efectivo," "*10))
        print("{:<50} {:<20}{:<20}".format("Cliente", saldo_total_cliente_2021," "*10))
        print("{:<50} {:<20}{:<20}".format("Deudores diversos", deudores_diversos," "*10))
        print("{:<50} {:<20}{:<20}".format("Funcionarios y empleados", funcionario_empleados," "*10))
        print("{:<50} {:<20}{:<20}".format("Inventario de materiales", suma_inventario_final_materiales," "*10))
        print("{:<50} {:<20}{:<20}".format("Inventario final de productos terminado", suma_inventario_final_materiales_terminados," "*10))
        Suma_activosC = flujo_efectivo + saldo_total_cliente_2021 + deudores_diversos + funcionario_empleados + suma_inventario_final_materiales + suma_inventario_final_materiales_terminados
        print("{:<50} {:<20}{:<20}".format("Total de activos circulantes", " "*10,Suma_activosC))
        print("")
        print("No circulante")
        print("{:<50} {:<20}{:<20}".format("Terreno",terreno," "*10))
        suma_PlantEqui = planta_equipo + 85000
        print("{:<50} {:<20}{:<20}".format("Planta y equipo",suma_PlantEqui," "*10 ))
        depreciacion_acumulada_general = depreciacion_acum - suma_depreciacion_ga - suma_depre
        print("{:<50} {:<20}{:<20}".format("Depreciacion Acumulada", depreciacion_acumulada_general," "*10))
        suma_activosNC = suma_PlantEqui + depreciacion_acumulada_general + terreno
        print("{:<50} {:<20}{:<20}".format("Inventario de materiales", " "*10,suma_activosNC))
        print("")
        suma_activos_total = suma_activosNC + Suma_activosC
        print("{:<50} {:<20}{:<20}".format("Activo total"," "*10,suma_activos_total ))
        print("")
        print("Pasivo")
        print("Corto plazo")
        print("{:<50} {:<20}{:<20}".format("Proveedores",total_provedores," "*10))
        print("{:<50} {:<20}{:<20}".format("Documento por pagar", documentos_pagar,""*10))
        print("{:<50} {:<20}{:<20}".format("ISR por pagar",isr_30 ," "*10))
        print("{:<50} {:<20}{:<20}".format("PTU por pagar",ptu_10, " "*10))
        Suma_pasivosCP_total = total_provedores + documentos_pagar + isr_30 + ptu_10
        print("{:<50} {:<20}{:<20}".format("Total de pasivos corto plazo", " "*10,Suma_pasivosCP_total))
        print("")
        print("Largo plazo")
        print("{:<50} {:<20}{:<20}".format("Prestamos bancarios",Prestamos_bancarios ," "*10))
        Suma_pasivosLP_total = Prestamos_bancarios
        print("{:<50} {:<20}{:<20}".format("Total de pasivos largo plazo"," "*10,Suma_pasivosLP_total))
        print("")
        suma_pasivos_total = Suma_pasivosCP_total + Suma_pasivosLP_total
        print("{:<50} {:<20}{:<20}".format("Pasivos total", " "*10,suma_pasivos_total))
        print("")
        print("Capital Contable")
        print("{:<50} {:<20}{:<20}".format("Capital aportado",capital_constribuido," "*10))
        print("{:<50} {:<20}{:<20}".format("Capital ganado", capital_ganado," "*10))
        print("{:<50} {:<20}{:<20}".format("Utilidad del ejercicio", Utilidad_n," "*10))
        Suma_capitalC_total = capital_constribuido + capital_ganado + Utilidad_n
        print("{:<50} {:<20}{:<20}".format("Total de capital contable"," "*10,Suma_capitalC_total))
        Suma_pasivo_capital = Suma_capitalC_total + suma_pasivos_total
        print("{:<50} {:<20}{:<20}".format("Suma de pasivos y capital"," "*10,Suma_pasivo_capital))
        Balance = suma_activos_total - Suma_pasivo_capital
        print(Separador)
        print("{:<50} {:<20}{:<20}".format("Confirmador de balance", " "*20,Balance))

    elif Menu == "C":
        break
    else:
        print("Esa parte del menu no existe")
        continue
