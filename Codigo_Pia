                depreciacion_acum = int(input("Ingrese sus depreciaciones acumuladas "))
            except:
                print("Necesitamos el monto de depreciaciones acumuladas")
                continue

            Suma_nac = terreno + planta_equipo + depreciacion_acum
            
            print(Separador)
            print(f"Total de sus activos no circulantes es: {Suma_nac}")

            Activos = Suma_ac + Suma_nac 
            print(f"Total de activos es: {Activos}")

            activo =[efectivo,cliente,deudores_diversos,funcionario_empleados,inventarios_materiales,inventario_productos,terreno,planta_equipo,depreciacion_acum]    
            continue
