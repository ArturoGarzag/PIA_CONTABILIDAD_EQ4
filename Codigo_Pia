        print("{:<30} {:<20} {:<20} ".format('Saldo de cliente 31-Dic-2020'," "*10 ,cliente))
        print("{:<30} {:<20} {:<20} ".format('Ventas 2021'," "*10,Total_ventas))
        Cliente_2021 = cliente + Total_ventas
        print("{:<30} {:<20} {:<20} ".format('Total de clientes 2021'," "*10 ,Cliente_2021))
        print()
        print("{:<30} {:<20} {:<20} ".format('Entrada de efectivo'," "*10," "*10))
        print("{:<30} {:<20} {:<20} ".format('Por cobranza del 2020',cliente," "*10))
        Cobranza_2021= Total_ventas * 0.8
        print("{:<30} {:<20} {:<20} ".format('Por cobranza del 2021',Cobranza_2021," "*10))
        suma_saldo_2021 = Cobranza_2021 + cliente
        print("{:<30} {:<20} {:<20} ".format(" "*10," "*10,suma_saldo_2021))
        saldo_total_cliente_2021 = suma_saldo_2021 + Cliente_2021
        print("{:<30} {:<20} {:<20} ".format("Saldo de cliente del 2021"," "*10,saldo_total_cliente_2021))
        print()
        print(Separador)
        print()
        print("-"*15 + "Presupuesto de produccion" + "-"*15)
        print("{:<30} {:<20} {:<20} {:<20} ".format(''*10,"1er. Semestre" ,"2do. Semestre","Total 2021"))
        print("Producto RM")
        unidades_2021_rm = vpps_rm + vpss_rm
        print("{:<30} {:<20} {:<20} {:<13} ".format('Unidades por vender',vpps_rm ,vpss_rm,unidades_2021_rm))
        print("{:<30} {:<20} {:<20} {:<13} ".format('(+) Inventario final',iip_rm ,ifs_rm,ifs_rm))
        suma_unidades_1er_rm = vpps_rm + iip_rm
        suma_unidades_2do_rm = vpss_rm + ifs_rm
        suma_unidades_rm = unidades_2021_rm + ifs_rm
        print("{:<30} {:<20} {:<20} {:<13} ".format('(=) Total de unidades',suma_unidades_1er_rm,suma_unidades_2do_rm, suma_unidades_rm))
        print("{:<30} {:<20} {:<20} {:<13} ".format('(-) Inventario inicial',iip_rm,iip_rm,iip_rm))
        resta_unidades_1er_rm = suma_unidades_1er_rm - iip_rm
        resta_unidades_2do_rm = suma_unidades_2do_rm - iip_rm
        total_unidades_rm = suma_unidades_rm - iip_rm  
        print("{:<30} {:<20} {:<20} {:<13} ".format('Unidades a producir',resta_unidades_1er_rm ,resta_unidades_2do_rm,total_unidades_rm))
        print("Productos RD")
        unidades_2021_rd = vpps_rd + vpss_rd
