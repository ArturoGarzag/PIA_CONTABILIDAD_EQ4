                inventario_productos = int(input("INgrese su cifra de inventarios de productos "))
            except:
                print("Necesitamos el monto de inventario de productos")
                continue    
            
            Suma_ac = efectivo + cliente + deudores_diversos + funcionario_empleados + inventarios_materiales + inventario_productos
        
            print(Separador)
            print(f"Total de sus activos circulantes es: {Suma_ac}")
            print(Separador)
            print("Comenzaremos con sus activos no circulantes")
            print(Separador)
            try:
                terreno = int(input("Ingrese su cifra de terrenos "))
            except:
                print("Necesitamos el monto de terrenos ")
                continue
            try:    
                planta_equipo = int(input("Ingrese su cifra de plantas y equipos "))
            except:
                print("Necesitamos el monto de planta y equipo")
                continue
