    elif Menu == "B":
        print()
        print(Separador)
        print()

        print("-"*15 + "Presupuesto de ventas" + "-"*15)
        print("{:<30} {:<20} {:<20} {:<13}".format(' '*10, '1er.Semestre', '2do.Semestre', '2021'))
        print("Producto RM")
        print("{:<30} {:<20} {:<20} {:<13}".format('Unidades a vender', vpps_rm, vpss_rm," "*10))
