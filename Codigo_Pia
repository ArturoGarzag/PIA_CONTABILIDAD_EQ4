print(Separador)
while True:
    Menu = input(f"\n A) Ingresar informacion \n B) Ver el presupuesto maestro \n C) Salir \n Seleccione alguna de las opciones: ").upper()
    print(Separador)
    if Menu == "A":
        Sub_menu1 = input(f"\n A)Activos \n B)Pasivos \n C)Capital contable \n D)Requerimiento de materiales \n E)Informacion de inventarios \n F)Productos \n G)Gastos \n").upper()
        print(Separador)
        if Sub_menu1 == "A":
            print("Comenzaremos con sus activos circulantes")
            print(Separador)
            try:
                efectivo = int(input("Ingrese su efectivo: "))
            except:
                print("Necesitamos el monto de efectivo")
                continue
            try:
                cliente = int(input("Ingrese su cifra de clientes: "))
            except:
                print("Ingreese el monto de clientes")
                continue
            try:
                deudores_diversos = int(input("Ingrese su cifra de deudores diversos "))
            except:
                print("Necesitamos el monto de deudores diversos")
