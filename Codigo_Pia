        print("{:<30} {:<20} {:<20} {:<13}".format('Importe de venta', Importe_ri_1er, Importe_ri_2do, importe_venta_ri))
        Suma_importe_1er = Importe_rd_1er + Importe_ri_1er + Importe_rm_1er
        Suma_importe_2do = Importe_ri_2do + Importe_rd_2do + Importe_rm_2do
